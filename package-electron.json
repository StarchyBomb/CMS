{
  "name": "toryod-cms-app",
  "version": "1.0.0",
  "description": "TorYod CMS - Standalone Desktop Application",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "cms",
    "desktop-app",
    "electron",
    "content-management"
  ],
  "author": "TorYod Development Team",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.toryod.cms",
    "productName": "TorYod CMS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-app.html",
      "electron-main.js",
      "electron-preload.js",
      "cms-admin.html",
      "cms-admin.js",
      "cms-admin.css",
      "cms-widget.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "icon.png"
    }
  }
}
